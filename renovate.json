{
  "extends": [
    "config:recommended"
  ],
  "timezone": "UTC",
  "commitMessage": {
    "env": "{{packageFile}}: update {{depName}} to {{newVersion}}"
  },
  "managerFilePatterns": {

  },
  "packageRules": [
    {
      "matchPackageNames": [
        "curl",
        "httpd",
        "python3",
        "openssl",
        "nginx"
      ],
      "matchManagers": [
        "dockerfile"
      ],
      "enabled": true,
      "matchUpdateTypes": [
        "minor",
        "major"
      ],
      "automerge": false
    }
  ]
}