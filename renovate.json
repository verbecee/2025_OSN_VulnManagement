{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "UTC",
  "packageRules": [
    {
      "matchCategories": [
        "docker"
      ],
      "fileMatch": [
        "Dockerfile"
      ],
      "enabled": true
    },
    {
      "matchPackageNames": [
        "curl",
        "httpd",
        "python3",
        "openssl",
        "nginx"
      ],
      "matchManagers": [
        "dockerfile"
      ],
      "enabled": true,
      "matchUpdateTypes": [
        "minor",
        "major"
      ],
      "automerge": false
    }
  ]
}
