{
  "extends": [
    "config:recommended"
  ],
  "timezone": "UTC",
  "commitMessage": {
    "env": "{{packageFile}}: update {{depName}} to {{newVersion}}",
    "type": "string"
  },
  "packageRules": [
    {
      "matchCategories": [
        "docker"
      ],
      "fileMatch": [
        "Dockerfile"
      ],
      "enabled": true
    },
    {
      "matchPackageNames": [
        "curl",
        "httpd",
        "python3",
        "openssl",
        "nginx"
      ],
      "matchManagers": [
        "dockerfile"
      ],
      "enabled": true,
      "matchUpdateTypes": [
        "minor",
        "major"
      ],
      "automerge": false
    }
  ]
}